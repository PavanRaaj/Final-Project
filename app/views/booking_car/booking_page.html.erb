<header class="nav_bar_booking_car_page">
  <div><a href="/"><%= image_tag('taxido_logo.png',class: "logo_image") %></a></div>
  <a href="/homes/contact_us_page">
  <div>
    <p class="nav_bar_contact_us_button">Contact Us</p>
  </div>
  </a>
  <a href="/homes/terms_and_condition_page">
    <div>
      <p class="nav_bar_tcs_button">T&C</p>
    </div>
    </a>
  <% if @presence == 0 %>
    <a href="/homes/login">
      <div class="nav_bar_right_button">Log in</div>
    </a>
    <% else %>
    
      <div class="dropdown">
        <span>
        <%= image_tag('image.png',class: "user_image",onclick: "dropdwn()" ) %>
      </span>
      
        <div class="dropdown-content" id="dropdown-content">
        
          <div class="dropbtn_btn">
            <button class="dropbtn"><%= image_tag('profile1.jpg',class: "profile_image") %><%= @user.user_name %></button>
          </div>
          <div>
          <span class="logout_content">
          <a href="/logout" data-method="delete"><%= image_tag('logout1.png',class: "profile_image",width: "20px" ) %>Log Out</a>
        </span>
        </div>
        </div>
      </div>
    
    <% end %>
</header>

<div class="main_div_in_booking_car_page">
    <form action="/booking_car/booking_detail" method="post">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>"
    />
  <div class="start_details_div">
    <div class="start_details_title">start details</div>

    <div class="start_details_feilds_first_line">
      <input
        type="text"
        name="booking_detail[pick_up_point]"
        id=""
        autofocus
        required
        placeholder="Pick Up Point, Airport or Hotels"
        class="pick_up_point"
      />
      <input
        type="text"
        name="booking_detail[pick_up_city]"
        id=""
        required
        placeholder="Pick Up City"
        class="pick_up_city"
      />
    </div>

    <div class="start_details_feilds_second_line">
      <input type="text" name="booking_detail[pick_up_date]" id="" placeholder="Select Date" onfocus="(this.type='date')" onblur="(this.type='text')" required class="start_and_end_date" min=<%="#{Date.today}"%> />
      <% hour=Time.now.hour%>
      <% min_hour = hour+03%>
      <% time = "#{min_hour}"+":"+"#{Time.now.min}" %>
      <input
        type="text"
        name="booking_detail[pick_up_time]"
        id=""
        placeholder="HH:MM"
        onfocus="(this.type='time')"
        onblur="(this.type='text')"
        required
        min=<%=time%>
        class="start_and_end_time"
      />
    </div>
  </div>
  <div class="end_details_div">
    <div class="end_details_title">end details</div>

    <div class="end_details_feilds">
      <input type="text" name="booking_detail[end_date]" placeholder="Select Date" onfocus="(this.type='date')" onblur="(this.type='text')" required id="" min=<%="#{Date.today+1}"%> class="start_and_end_date" />
     
      <input
        type="text"
        name="booking_detail[end_time]]"
        id=""
        required
        placeholder="HH:MM"
        onfocus="(this.type='time')"
        onblur="(this.type='text')"
        class="start_and_end_time"
      />
    </div>
  </div>

  <div class="search_cars_button_div">
    <input type="submit" value="Search Car" class="search_cars_button" />
  </div>

  </form>
</div>


<script>
  function dropdwn(){
    document.getElementById("dropdown-content").style.display="block";
  }

  window.onclick = function(e) {
  if (!e.target.matches('.user_image')) {
  var myDropdown = document.getElementById("dropdown-content");
    if (myDropdown.style.display = "block") {
      myDropdown.style.display = "none";
    }
  }
}
</script>